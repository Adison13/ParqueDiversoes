<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.IngressoController"
      alignment="CENTER"
      spacing="15"
      stylesheets="@../view/style.css"
      prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Meus Ingressos 🎟️" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="tabelaIngressos" prefHeight="250">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colCliente" text="Cliente" prefWidth="150"/>
            <TableColumn fx:id="colBilheteria" text="Bilheteria" prefWidth="150"/>
            <TableColumn fx:id="colPagamento" text="Pagamento" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Fechar" onAction="#fecharJanela" prefWidth="120"/>
    </HBox>

</VBox>










